<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-1-create-main-tables" author="Nikita Przhevalski">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="passengers"/>
                <tableExists tableName="cards"/>
                <tableExists tableName="passengers_cards"/>
                <sequenceExists sequenceName="passenger_generator"/>
            </not>
        </preConditions>

        <createSequence sequenceName="passenger_generator" startValue="1" incrementBy="5"/>

        <createTable tableName="passengers">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="external_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="varchar">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="password" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="rate" type="double precision" defaultValue="5.0">
                <constraints nullable="false"/>
            </column>
            <column name="default_payment_method" type="varchar">
                <constraints nullable="true"/>
            </column>
            <column name="discount_value_in_percents" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="discount_created_at" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="discount_expired_at" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="discount_is_used" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="cards">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="external_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="passengers_cards">
            <column name="passenger_id" type="bigint">
                <constraints foreignKeyName="passenger-fk"
                             referencedTableName="passengers"
                             referencedColumnNames="id"/>
            </column>
            <column name="card_id" type="bigint">
                <constraints foreignKeyName="card-fk"
                             referencedTableName="cards"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1-2-fill-passengers-table" author="Nikita Przhevalski">
        <loadData tableName="passengers" file="db/data/passengers-data.csv"/>
    </changeSet>

    <changeSet id="v1-3-fill-cards-table" author="Nikita Przhevalski">
        <loadData tableName="cards" file="db/data/cards-data.csv"/>
    </changeSet>

    <changeSet id="v1-4-fill-passengers-cards-table" author="Nikita Przhevalski">
        <loadData tableName="passengers_cards" file="db/data/passengers-cards-data.csv"/>
    </changeSet>
    
    <changeSet id="v1-5-restart-sequence-ids" author="Nikita Przhevalski">
        <sqlFile path="db/sql/restart-ids.sql"/>
    </changeSet>

</databaseChangeLog>