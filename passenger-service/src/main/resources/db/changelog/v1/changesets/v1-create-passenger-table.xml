<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-1-create-passenger-table" author="Nikita Przhevalski">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="passenger_generator"/>
                <indexExists indexName="passenger_eid_index"/>
                <tableExists tableName="passengers"/>
            </not>
        </preConditions>

        <createSequence sequenceName="passenger_generator" startValue="1" incrementBy="5"/>

        <createTable tableName="passengers">
            <column name="id" type="bigint" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="external_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="rate" type="double precision" defaultValue="5.0">
                <constraints nullable="false"/>
            </column>
            <column name="default_payment_method" type="varchar">
                <constraints nullable="true"/>
            </column>
            <column name="discount_value_in_percents" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="discount_created_at" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="discount_expired_at" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="discount_is_used" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="passengers" indexName="passenger_eid_index">
            <column name="external_id"/>
        </createIndex>

        <rollback>
            <sqlFile dbms="postgresql"
                     path="db/changelog/v1/sql/v1-drop-passenger-table.sql"/>
        </rollback>
    </changeSet>

</databaseChangeLog>