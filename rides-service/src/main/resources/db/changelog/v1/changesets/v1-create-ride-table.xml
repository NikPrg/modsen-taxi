<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-2-create-ride-table" author="Nikita Przhevalski">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="ride_generator"/>
                <tableExists tableName="rides"/>
            </not>
        </preConditions>

        <createSequence sequenceName="ride_generator" startValue="1" incrementBy="10"/>

        <createTable tableName="rides">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="external_id" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="passenger_external_id" type="uuid">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="driver_id" type="bigint">
                <constraints unique="false"
                             nullable="true"
                             foreignKeyName="driver-info-fk"
                             referencedTableName="drivers_info"
                             referencedColumnNames="id"/>
            </column>
            <column name="pick_up_address" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="destination_address" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="ride_cost" type="double precision">
                <constraints nullable="false"/>
            </column>
            <column name="payment_method" type="varchar">
                <constraints nullable="true"/>
            </column>
            <column name="ride_status" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="ride_started_at" type="time">
                <constraints nullable="true"/>
            </column>
            <column name="ride_duration" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="ride_created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <sqlFile dbms="postgresql"
                     path="db/changelog/v1/sql/v1-drop-rides-table.sql"/>
        </rollback>
    </changeSet>

</databaseChangeLog>