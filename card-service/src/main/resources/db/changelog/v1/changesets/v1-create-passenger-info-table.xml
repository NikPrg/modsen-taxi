<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-2-create-passenger-info-table" author="Nikita Przhevalski">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="passenger_info_id_generator"/>
                <tableExists tableName="passengers_info"/>
            </not>
        </preConditions>

        <createSequence sequenceName="passenger_info_id_generator" startValue="1" incrementBy="5"/>

        <createTable tableName="passengers_info">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="external_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <sqlFile dbms="postgresql"
                     path="db/changelog/v1/sql/v1-drop-passenger-info-table.sql"/>
        </rollback>
    </changeSet>

</databaseChangeLog>